file = {:H$\backslash$:/Eigene Dateien/Library/Reifenberger et al. - 2014 - Molecular characterization of long-term survivors of glioblastoma using genome- and transcriptome-wide profiling.pdf:pdf},
issn = {00207136},
journal = {International Journal of Cancer},
keywords = {Glioma,Henry Wirth},
mendeley-tags = {Glioma,Henry Wirth},
month = mar,
pages = {n/a--n/a},
pmid = {24615357},
title = {{Molecular characterization of long-term survivors of glioblastoma using genome- and transcriptome-wide profiling}},
